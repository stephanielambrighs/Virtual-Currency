doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='./stylesheets/dist/app.css')
  title imdCoin
.container.app__background
  header.header
    .header__user
      p.header__name
      img.header__img(src='./images/defaultAvatar.png' alt='avatar')
      a.header__text(href="/logout" type='submit' value='logout') logout
    .header__coins
      img.header__coinsIcon(src='./images/coinIcon.svg' alt='')
      p.header__coinsAmount &euro;468.34
  header.headerD
    .headerD__links
      a(href='/')
        .headerD__item
          img.headerD__icon(src='./images/homeIconW.svg' alt='home')
          p.headerD__text home
      a(href='/leaderboard')
        .headerD__item
          img.headerD__icon--leaderboard(src='./images/podium.png' alt='home')
          p.headerD__text--leaderboard Leader board
      a(href='/transfer')
        .headerD__item
          img.headerD__icon--coins(src='./images/coinsIconW.svg' alt='send coins')
          p.headerD__text--coins send coins
      a(href='/history')
        .headerD__item
          img.headerD__icon(src='./images/historyIconW.svg' alt='history')
          p.headerD__text history
    .headerD__user
      p.headerD__name
      img.headerD__img(src='./images/defaultAvatar.png' alt='avatar')
      a.headerD__text(href="/logout" type='submit' value='logout') logout

h1.card__H1 Send coins
.card.card--form
  ul.card__list
    .card__form
      p.message_transfer
      form(autocomplete='off' action='')
        label#card__receiver(for='card__receiver') Receiver
        br
        input#receiver(type='text' name='Receiver')
        br
      label(for='card__amount') amount
      br
      input#card__amount(type='text')
      br
      label(for='card__reason') Reason:
      select#card__reason
        option(value='Development help') Development help
        option(value='Design help') Design help
        option(value='Feedback') Feedback
        option(value='Meeting deadlines') Meeting deadlines
        option(value='Other') Other
      br
      label(for='card__description') description
      br
      input#card__description(type='text')
      br
      br
      input#card__btn(type='submit' value='Submit')
nav.nav
  a(href='/')
    .nav__item
      img.nav__icon--home(src='./images/homeIconW.svg' alt='home')
      p.nav__text Home
  a(href='/leaderboard')
    .nav__item
      img.nav__icon--leaderboard(src='./images/podium.png' alt='home')
      p.nav__text Leaderboard
  a(href='/transfer')
    .nav__item
      img.nav__icon--coins(src='./images/coinsIconW.svg' alt='send coins')
      p.nav__text Send coins
  a(href='/history')
    .nav__item
      img.nav__icon--history(src='./images/historyIconW.svg' alt='history')
      p.nav__text History

footer.footer
  p @IMDCOIN


  script(src="http://localhost:3000/primus/primus.js")
  script(src='javascripts/dist/app.js/transferFrontend-min.js')